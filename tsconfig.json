{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "types": ["react"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
  },
  "include": ["src"],
  "exclude": ["node_modules", "demo"]
}
